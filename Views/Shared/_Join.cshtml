<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>مكالمة فيديو باستخدام Hewar</title>

    <!-- Agora SDK -->
    <script src="https://download.agora.io/sdk/release/AgoraRTC_N.js"></script>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <!-- CSS مخصص -->
    <link rel="stylesheet" href="~/css/headers.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Join.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UsersApp.styles.css" asp-append-version="true" />
</head>
<body class="m-0 p-0" style="height: 100vh; overflow: hidden;">

    <!-- الهيدر الثابت -->
    <header class="main-header fixed-top">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <!-- المستخدم -->
            <div class="user-auth">

                <i class="fas fa-user-circle"></i>
                <partial name="_LoginPartial" />

            </div>

            <!-- أيقونات التنقل -->
            <div class="nav-icons d-flex align-items-center gap-4">
                <a asp-controller="Home" asp-action="Items" class="icon-link" title="الصفحة الرئيسية">
                    <i class="fas fa-home"></i>
                </a>
                <a href="/settings" class="icon-link" title="الإعدادات">
                    <i class="fas fa-cog"></i>
                </a>
                <a asp-controller="Home" asp-action="Learn" class="icon-link" title="مساعدة">
                    <i class="fas fa-question-circle"></i>
                </a>
                <a href="/" class="icon-link" title="تسجيل الخروج">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>

        </div>
    </header>


    <!-- المحتوى الرئيسي -->
    <main style="padding-top: 80px; height: calc(100vh - 80px);">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
        const userAuth = document.querySelector(".user-auth");
        if (userAuth) {
            userAuth.addEventListener("click", function () {
                location.reload(); // إعادة تحميل الصفحة
            });
        }
    });
</script>
</html>

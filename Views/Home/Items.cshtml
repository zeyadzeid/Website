@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Item.cshtml";
}

<div class="split-screen">
    <!-- القسم الأيسر: المحتوى -->
    <div class="text-section text-center px-3">
        <h1 class="fw-bold title-text">Welcome <i class="fa-solid fa-hand"></i></h1>
        <h2 class="fw-bold title-main">UNI TALK!👐</h2>

        <div class="d-flex justify-content-center gap-4 mt-4 flex-wrap">
            <div class="card custom-card">
                <div class="card-body">
                    <i class="fas fa-video fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">Inclusive Conferences</h5>
                    @* <p class="card-text">everyone can speak</p> *@
                    <a asp-controller="Home" asp-action="Add" class="stretched-link"></a>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-body">
                    <i class="fas fa-user-plus fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">Inclusive <br />Meeting</h5>
                    @* <p class="card-text">Join a new meeting easily</p> *@
                    <a asp-controller="Home" asp-action="Join" class="stretched-link"></a>
                </div>
            </div>

            <div class="card custom-card">
                <div class="card-body">
                    <i class="fas fa-book fa-3x mb-3"></i>
                    <h5 class="card-title fw-bold">LEARN <br />with us</h5>
                    @* <p class="card-text">Learn how to start</p> *@
                    <a asp-controller="Home" asp-action="Learn" class="stretched-link"></a>
                </div>
            </div>


           
        </div>
    </div>

    <!-- القسم الأيمن: الصورة -->
    <div class="image-section text-center mt-4 mt-md-0 px-3">
        <img src="~/images/8.jpg" alt="صورة" class="img-fluid large-image" />
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
